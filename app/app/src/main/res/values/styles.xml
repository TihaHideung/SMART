<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema utama aplikasi -->
    <style name="Theme.SMART" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize warna atau font di sini -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#03DAC6</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="android:statusBarColor">#3700B3</item>
        <item name="android:navigationBarColor">#000000</item>
    </style>

    <!-- Style untuk tampilan angka tanggal kalender -->
    <style name="CalendarDateStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/date_circle_background</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="CalendarDay">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/date_circle_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>